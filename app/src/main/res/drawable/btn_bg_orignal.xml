<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#FF0000" android:endColor="#FF0000" android:angle="270" />
            <stroke android:width="1dp" android:color="#404040" />
            <corners android:bottomLeftRadius="5dp" android:topLeftRadius="5dp" android:bottomRightRadius="5dp" android:topRightRadius="5dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#FF0000" android:endColor="#FF0000" android:angle="270" />
            <stroke android:width="1dp" android:color="#404040" />
            <corners android:radius="3dp" />
        </shape>
    </item>
</selector>